@import 'nib'
@import './mixins'


@media (min-width: 768px)
  .window
    backdrop()

    width: 400px
    margin: 50px

    .content
      padding: 7px 10px

    .header
      margin: 2px 2px 0
      padding: 1px 2px
      color: white;
      background: linear-gradient(to right, blue-dark, blue-light)
      font-weight: bold
      font-size: 11px
      line-height: 16px

      .icon
        width: 16px
        height: 16px
        float: left
        margin-right: 2px

      .buttons
        height: 14px
        float: right

        button
          // TODO: fix centering
          vertical-align: text-top
          font-weight: bold
          line-height: 12px
          padding: 0
          height: 14px
          width: 14px
          cursor: pointer

  #terminal-window
    height: 500px
    width: 45%
    cursor: text
    overflow: hidden

  #shutdown-dialog
    width: 350px
    height: 150px
    position: absolute
    left: 40%
    top: 35%

    .content
      text-align: center

      p
        margin-bottom: 25px

      button
        margin: 10px
        cursor: pointer